{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "lib": ["es5", "dom"],
    "types": ["cypress", "node"],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "allowJs": true,
    "checkJs": false,
    "jsxImportSource": "react"
  },
  "include": ["**/*.ts", "**/*.tsx", "support/**/*.ts", "support/**/*.tsx"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
} 
